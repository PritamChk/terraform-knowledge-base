
data "aws_ami" "aws_linux" {
    most_recent = true
    owners      = ["amazon"]
    filter {
      name   = "name"
      values = ["al2023-ami-*-x86_64"]
    }
    filter {
      name = "virtualization-type"
      values = ["hvm"]
    }
}

resource "aws_instance" "vm2" {
  ami = data.aws_ami.aws_linux.id
  instance_type = "t2.micro"
  lifecycle {
    prevent_destroy = true
  }
}
